<Page x:Class="prackt7.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prackt7"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="300"
      Title="Auth"
      Background="White">

    <StackPanel Orientation ="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Width="40">Вход</Label>
        <StackPanel Orientation="Horizontal">
            <Label Width="60">ID</Label>
            <TextBox x:Name="Auth_Id" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 10">
            <Label Width="60">Пароль</Label>
            <TextBox Width="200" Text="{Binding Password, Mode=TwoWay }"></TextBox>
        </StackPanel>
        <Button Margin="10" Click="Button_Click">Вход</Button>
        <Label x:Name="Reg_But" HorizontalAlignment="Center" >
            <Hyperlink NavigateUri="Register.xaml">Регистрация</Hyperlink> </Label>
    </StackPanel>
</Page>
