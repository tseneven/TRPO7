<Page x:Class="prackt7.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prackt7"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="300"
      Title="Register"
      Background="White">

    <StackPanel Orientation ="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label HorizontalAlignment="Center" >Регистрация</Label>
        <StackPanel Orientation="Horizontal" Margin="0 5">
            <Label Width="60">Фамилия</Label>
            <TextBox Width="200" Text="{Binding LastName, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 5">
            <Label Width="60">Имя</Label>
            <TextBox Width="200" Text="{Binding Name, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 5">
            <Label Width="60">Отчество</Label>
            <TextBox Width="200" Text="{Binding MiddleName, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 5">
            <Label Width="60">Специализация</Label>
            <TextBox Width="200" Text="{Binding Spectialisation, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 5">
            <Label Width="60">Пароль</Label>
            <TextBox Width="200" Text="{Binding Password, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 5">
            <Label Width="60" >Повтоите пароль</Label>
            <TextBox x:Name="rep_pass" Width="200"></TextBox>
        </StackPanel>
        <Button Margin="10" Click="Button_Click">Зарегистрироваться</Button>
        <Label x:Name="Reg_But" HorizontalAlignment="Center" >
            <Hyperlink NavigateUri="Auth.xaml">Авторизация</Hyperlink>
        </Label>
    </StackPanel>
</Page>
