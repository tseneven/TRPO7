<Page x:Class="prackt7.DeteilPacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prackt7"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeteilPacient"
      Background="White">

    <DockPanel
        LastChildFill="false">

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Click="Button_Click">Назад</Button>
            <Button Margin="10 0" Click="Button_Click_1">Создать прием</Button>
            <Button Margin="10 0" Click="Button_Click_2">Изменить пациента</Button>
        </StackPanel>


        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" >
            <StackPanel x:Name="addForm"  DockPanel.Dock="Top" HorizontalAlignment="Center" Initialized="addForm_Initialized">
                <Label>Форма прием</Label>

                <StackPanel Orientation="Horizontal" Margin="0 8 0 8">
                    <Label Width="120">Диагноз</Label>
                    <TextBox Width="170" Text="{Binding Diagnosis, Mode=TwoWay  }" ></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 8 0 8">
                    <Label Width="120">Рекомендации</Label>
                    <TextBox  Width="170" Text="{Binding Recomendations, Mode=TwoWay  }"></TextBox>
                </StackPanel>



            </StackPanel>
            <ListView x:Name="ListView" Height="350" ItemsSource="{Binding AppointmentStories}" Initialized="ListView_Initialized" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата: "/>
                                <TextBlock Text="{Binding Date}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Доктор: "/>
                                <TextBlock Text="{Binding Doctor_id}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Диагноз: "/>
                                <TextBlock Text="{Binding Diagnosis}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Рекомендации: "/>
                                <TextBlock Text="{Binding Recomendations}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>

        <StatusBar Background="LightGray" DockPanel.Dock="Bottom">
            <TextBlock x:Name="Counts" DockPanel.Dock="Bottom" 
    Margin="8"></TextBlock>
        </StatusBar>
    </DockPanel>
</Page>
