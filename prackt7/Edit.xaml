<Page x:Class="prackt7.Edit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prackt7"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Edit"
      Background="White">


    <DockPanel
        LastChildFill="false">

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Click="Button_Click" >Назад</Button>
            <Button Margin="10 0" Click="Button_Click_1" >Отредактировать</Button>
        </StackPanel>


        <StackPanel x:Name="addForm"  DockPanel.Dock="Top" HorizontalAlignment="Center">
            <Label>Форма добавления пациента</Label>

            <StackPanel Orientation="Horizontal" Margin="0 8 0 8">
                <Label Width="120">Фамилия</Label>
                <TextBox x:Name="LastName_Add" Width="170" Text="{Binding LastName, Mode=TwoWay  }" ></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 8 0 8">
                <Label Width="120">Имя</Label>
                <TextBox  x:Name="Name_Add" Width="170" Text="{Binding Name, Mode=TwoWay  }"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 8 0 8">
                <Label Width="120">Отчество</Label>
                <TextBox x:Name="MiddleName_Add" Width="170" Text="{Binding MiddleName, Mode=TwoWay  }"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 8 0 8">
                <Label Width="120">Дата рождения</Label>
                <TextBox x:Name="Date_Add" Width="170" Text="{Binding Birthday, Mode=TwoWay  }"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 8 0 8">
                <Label Width="120">Телефон</Label>
                <TextBox x:Name="Date_d" Width="170" Text="{Binding PhoneNumber, Mode=TwoWay  }"></TextBox>
            </StackPanel>



        </StackPanel>


        <StatusBar Background="LightGray" DockPanel.Dock="Bottom">
            <TextBlock x:Name="Counts" DockPanel.Dock="Bottom" 
    Margin="8"></TextBlock>
        </StatusBar>
    </DockPanel>

</Page>
