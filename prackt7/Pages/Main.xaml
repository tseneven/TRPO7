<Page x:Class="prackt7.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prackt7"
      mc:Ignorable="d" 
      Title="Main" Loaded="Page_Loaded">
    <DockPanel
        LastChildFill="false">
        <Menu VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem Header="Menu">
                <MenuItem x:Name="ThemeItem" Header="Change Theme" Click="ThemeItem_Click" ></MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Top">
            <Button x:Name="add_btn" Click="add_btn_Click" Style="{StaticResource AddButton}">Создать пациента</Button>
            <Button x:Name="delete_btn" Click="delete_btn_Click" Style="{StaticResource DeleteButton}"></Button>
            <Button Click="Button_Click">Начать прием</Button>
            <Button Click="Button_Click_1">Изменить информацию</Button>
        </StackPanel>

        <ListView DockPanel.Dock="Top" ItemsSource="{Binding Pacients}" SelectedItem="{Binding SelectedPacient}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <StackPanel>
                            <TextBlock Text="Идентификатор: "/>
                            <TextBlock Text="{Binding Id}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Имя: "/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Фамилия: "/>
                            <TextBlock Text="{Binding LastName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отчество: "/>
                            <TextBlock Text="{Binding MiddleName}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Возраст: "/>
                            <TextBlock Text="{Binding Birthday}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <StatusBar  DockPanel.Dock="Bottom">
            <TextBlock Style="{StaticResource sbText}" x:Name="Counts" DockPanel.Dock="Bottom" 
    ></TextBlock>
        </StatusBar>
    </DockPanel>

</Page>
