<Page x:Class="prackt7.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prackt7"
      mc:Ignorable="d" 
      xmlns:converters="clr-namespace:prackt7.Validation"
      Title="Main" Loaded="Page_Loaded">
    <Page.Resources>
        <converters:AgeConverter x:Key="ageConverter"/>
    </Page.Resources>




    <DockPanel
        LastChildFill="false">
        <Menu VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem Header="Menu">
                <MenuItem x:Name="ThemeItem" Header="Change Theme" Click="ThemeItem_Click" ></MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Top">
            <Button x:Name="add_btn" Click="add_btn_Click" Background="{DynamicResource MainButton}">Создать пациента</Button>
            <Button x:Name="delete_btn"  Click="delete_btn_Click" Background="{DynamicResource DangerButton}">Удалить пациента</Button>
            <Button Click="Button_Click" Background="{DynamicResource MainButton}">Начать прием</Button>
            <Button Click="Button_Click_1" Background="{DynamicResource MainButton}">Изменить информацию</Button>
        </StackPanel>

        <ListView DockPanel.Dock="Top" ItemsSource="{Binding Pacients}" SelectedItem="{Binding SelectedPacient}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <StackPanel>
                            <TextBlock Text="Идентификатор: "/>
                            <TextBlock Text="{Binding Id}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Имя: "/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Фамилия: "/>
                            <TextBlock Text="{Binding LastName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отчество: "/>
                            <TextBlock Text="{Binding MiddleName}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Дата рождения: "/>
                            <TextBlock Text="{Binding Birthday, StringFormat={}{0:d}}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Номер телефона: "/>
                            <TextBlock Text="{Binding PhoneNumber, StringFormat={}{0:# (###) ### ## ##} }"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Дееспособность: "/>
                            <TextBlock Text="{Binding Birthday, Converter={StaticResource  ageConverter}}"/>
                        </StackPanel>
                        

                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <StatusBar  DockPanel.Dock="Bottom">
            <TextBlock Style="{StaticResource sbText}" x:Name="Counts" DockPanel.Dock="Bottom" 
    ></TextBlock>
        </StatusBar>
    </DockPanel>

</Page>
